extends ./layout.pug

block variables
  - var nav_class = 'dark'
  - var wio_id = page.id

block body

  -// Content Section
  div.grid-container(data-wio-id=page.id)

    -// Display the slices
    for slice in page.data.body
      case slice.slice_type
        when 'highlight-section'
          include ./slices/highlight-section.pug
        when 'banner'
          include ./slices/banner.pug
        when 'banner-look'
          include ./slices/banner-look.pug
        when 'editorial-look'
          include ./slices/editorial-look.pug
        when 'text-section'
          include ./slices/text-section.pug
        when 'image-slider'
          include ./slices/image-slider.pug 
        when 'gallery'
          include ./slices/gallery.pug
        when 'video'
          include ./slices/video.pug
